# ============================================================================
# CRM BACKEND ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=
PORT=
API_VERSION=
APP_VERSION=

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL connection string
# Example: postgresql://username:password@localhost:5432/{your db name}
DATABASE_URL=

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# Generate secure random strings for these
# You can use: openssl rand -base64 32
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=
SERVICE_AUTH_SECRET=

# ============================================================================
# CORS & SECURITY
# ============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=

# ============================================================================
# SMTP
# ============================================================================
SMTP_USER=
SMTP_PASS=
SMTP_HOST=
SMTP_PORT=
